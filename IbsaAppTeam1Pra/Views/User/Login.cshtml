@model IbsaAppTeam1Pra.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}


<h1 class="text-center mt-5">PRIJAVA</h1>

<div class="centered-container">
    <form asp-action="Login" class="centered-form">
    <div class="text-danger">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <div class="form-group mb-3">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control form-control-sm" style="width: 250px;" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group mt-3 mb-3">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control form-control-sm" style="width: 250px;"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
        <button type="submit" class="btn btn-primary" style="margin:10px;background-color: #B45B0E">Login</button>
</form>
</div>

<div id="error-notice" class="bottom-left-notice">
    @if (!ViewData.ModelState.IsValid)
    {
            <span>Wrong username or password</span>
    }
</div>

<!-- Custom styling -->
<style>
    /* Center the form using flexbox */
    .centered-container {
        display: flex;
        justify-content: center;
        align-items: flex-start; /* Align the form higher (start of the flex container) */
        height: 100vh; /* Full height viewport */
        padding-top: 100px;
        
    }

    .centered-form {
        background-color: white;
        padding: 20px;
        border: 1px solid black;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding-right: 100px;
        padding-left: 100px;
        padding-top: 50px;
    }


    .bottom-left-notice {
        position: fixed;
        bottom: 10px;
        left: 10px;
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        display: none; /* Hidden by default */
        z-index: 1000;
    }

    .bottom-left-notice span {
        font-size: 14px;
    }
</style>

<script>
    // If there are any validation errors, display the notice
    document.addEventListener("DOMContentLoaded", function () {
        var errorNotice = document.getElementById("error-notice");
        if (@ViewData.ModelState.IsValid === false) {
            errorNotice.style.display = 'block';
        }
    });
</script>